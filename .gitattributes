# Handle large binary files
*.png filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text

# Text files should have normalized line endings
*.md text eol=lf
*.csv text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.toml text eol=lf
